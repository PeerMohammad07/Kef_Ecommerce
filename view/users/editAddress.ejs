        <h1 class="text-center fw-bold mb-5 fs-2">Edit Profile</h1>

    
        <form action="/editAddress?index=<%= index %>" method="post" onsubmit="return validate()">
        <input type="hidden" value="<%= address._id %>" name="id">
          <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control" value="<%= address.name %>" id="name" name="name" required
              placeholder="Enter your name">
          </div>
          <div class="form-group">
            <label for="state">state:</label>
            <select class="form-control" id="state" name="state">
              <!-- Add the options for each country here -->
              <option value="Kerala">Kerala</option>
              <option value="TamilNadu">Tamil Nadu</option>
              <option value="Bengaluru">Bengaluru</option>
              <option value="Goa">Goa</option>
              <!-- Add more countries as needed -->
            </select>
          </div>
          <div class="form-group pt-1">
            <label for="city">City:</label>
            <input type="text" class="form-control" value="<%= address.city %>" id="city" name="city" required
              placeholder="Enter your City">
          </div>
          <div class="form-group pt-1">
            <label for="pin">Pin No:</label>
            <input type="number" class="form-control" value="<%= address.pinNo %>" name="pin" id="pin" required
              placeholder="Enter your pin number">
          </div>
          <div class="form-group pt-1">
            <label for="phone">Phone No:</label>
            <input type="number" class="form-control" value="<%= address.phNo %>" name="phone" id="phone" required
              placeholder="Enter your phone number">
          </div>
         
              <div class="mt-4"> <button type="submit" class="btn btn-primary ">Update</button>
                  <a href="/profile" class="btn btn-primary">
                      <span class="text" >Back</span>
                    </a></div>
         
        </form>
      </div>
    </div>
