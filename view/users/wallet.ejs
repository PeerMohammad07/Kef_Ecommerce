<style>
  .body {
      font-family: 'Arial', sans-serif;
      margin: 20px;
      padding: 0;
      background-color: #f5f5f5;
  }

  .div {
      background-color: #fff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
  }

  h2 {
      color: #333;
  }

  table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
  }

  th, td {
      border: 1px solid #ddd;
      padding: 10px;
      text-align: left;
  }

  th {
      background-color: #f2f2f2;
  }

  tbody tr:hover {
      background-color: #f5f5f5;
  }

  span {
      font-weight: bold;
      color: #007bff;
  }
</style>
</head>
<div class="body">

<div class="div">
  <h2>Your Wallet History</h2>

  <div>
      <p>Total Wallet Amount: ₹<span id="totalAmount"><%= user.wallet %></span></p>
  </div>

  <table>
      <thead>
      
            <tr>
              <th>Date</th>
              <th>Money</th>
            </tr>
          
      </thead>
      <tbody id="walletHistory">
        <% if(user.walletHistory){ %>
          <% user.walletHistory.map((walletHistory)=>{%>
        <tr>
          <td>
            <%= walletHistory.date.toLocaleString('en-US', { timeZone: 'Asia/Kolkata' }) %>
          </td>
          <td>
            ₹<%= walletHistory.amount %>  
          </td>
        </tr>
          <!-- Wallet history items will be dynamically added here -->
          <%  })  %>
        <%}%>
      </tbody>
  </table>
</div>
</div>
