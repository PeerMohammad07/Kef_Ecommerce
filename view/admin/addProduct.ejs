    <script>

        function validateForm() {
            let name = document.getElementById('product_title').value;
            let previous_price = document.getElementById('previous_price').value;
            let price = document.getElementById('price').value;
            let quantity = document.getElementById('quantity').value;
            let category = document.getElementById('product-category').value;
            let description = document.getElementById('description').value;
            let lettersAndNumbersRegex = /^[A-Za-z0-9 ]+$/;
            if (!name || !previous_price || !price || !quantity || !category || !description) {
                alert('Please fill all fields.');
                return false;
            } else if (name.trim() === "" || quantity.trim() === "" || price.trim() === "" || description.trim() === "") {
                alert("Please fill properly, remove blank names.");
                return false;
            } else if (!lettersAndNumbersRegex.test(name)) {
                console.log("helo");
                alert('Product name should contain only letters');
                return false;
            }
            else if (description.length <= 20) {
                alert("please fill desc more than 20 letters");
                return false
            }
            else if (!Number.isInteger(Number(quantity))) {
                alert('Quantity must be an integer');
                return false;
            }
            else if (!Number.isInteger(Number(price))) {
                alert('Price must be an integer');
                return false;
            } else if (Number(quantity) <= 0) {
                alert('Quantity must be a positive number');
                return false;
            } else if (Number(price) <= 0) {
                alert('Price must be a positive number');
                return false;
            }

            else {
                return true;
            }
        }
    </script>

    <script>
        function previewImage(input, imageId) {
            const preview = document.getElementById(imageId);
            const file = input.files[0];

            if (file) {
                const reader = new FileReader();

                reader.onload = function (e) {
                    preview.src = e.target.result;
                };

                reader.readAsDataURL(file);
            } else {
                preview.src = "/assets/images/add Image.jpg";
            }
        }
    </script>
