<%if(locals.offers){%>
  <% offers.forEach((offer)=>{%>
      <div class="card">
          <div class="card-body">
              <h2 class="card-title">Offer Name:<%=
                      offer.name %>
              </h2>
              <p class="card-text">Percentage: <%=
                      offer.offerPercentage %>%</p>
              <p class="card-text">Expiry Date: <%=
                      offer.expiryDate.toLocaleDateString('en-US',
                      { year:'numeric', month: 'short' ,
                      day: '2-digit' }).replace(/\//g, '-'
                      ) %>
              </p>
              <div id="#button">
              <% if(String(category[0].offer) === String(offer._id)){ %>
               <button class="btn-danger" onclick="removeCategoryOffer('<%= offer._id %>','<%= categoryId %>')">Remove</button>
                <%} else{%>
                  
              <button class="btn btn-info"
                  data-bs-toggle="modal"
                  data-bs-target="#offerModal"
                  onclick="applyCategoryOffer('<%= offer._id %>','<%= categoryId %>')">
                  Apply Offer
              </button>
              <%}%>
            </div>
          </div>
      </div>
      <% }) %>
