    <script>
      function applyCategoryOffer(offerId,categoryId) {
          const data = {
            offerId:offerId,
            categoryId:categoryId
          }
          console.log(data);
          $.ajax({
              method:'post',
              url:'/admin/addCategoryOffer',
              data:data,
              success:function(response){
               if(response.success){
                location.reload()
               }
              }
          })
      }
  </script>
  <script>
    function removeCategoryOffer(offer,category){
      const data = {
            offerId:offer,
            categoryId:category
          }
          console.log(data);
          $.ajax({
              method:'post',
              url:'/admin/removeCategoryOffer',
              data:data,
              success:function(response){
