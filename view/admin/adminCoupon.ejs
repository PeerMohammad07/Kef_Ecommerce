                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header">

                </header>


                <div class="card-body">
                    <div class="table-responsive" id="reloadArea">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center">ID</th>
                                    <th class="text-center">Name</th>
                                    <th class="text-center">Coupon code</th>
                                    <th class="text-center">Activation Date</th>
                                    <th class="text-center">Expiry Date</th>
                                    <th class="text-center">limit of use</th>
                                    <th class="text-center">Discount Amount</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                          <tbody>
                            <% if(allCoupon.length>0){ %>
                                <% allCoupon.map((coupon,index)=>{ %>
                                    <tr>
                                       <td align="center"><%= index + 1 %></td>
                                       <td align="center"><%= coupon.name %></td>
                                       <td align="center"><%= coupon.couponCode %></td> 
                                       <td align="center"><%= coupon.activationDate.toLocaleDateString('en-US',
                                        {
                                        year:'numeric',
                                        month: 'short'
                                        ,
                                        day: '2-digit'
                                        }).replace(/\//g, '-'
                                        ) %></td>
                                       <td align="center"><%= coupon.expiryDate.toLocaleDateString('en-US',
                                        {
                                        year:'numeric',
                                        month: 'short'
                                        ,
                                        day: '2-digit'
                                        }).replace(/\//g, '-'
                                        ) %></td>
                                       <td align="center"><%= coupon.limitOfUse %></td>
                                       <td align="center"><%= coupon.discountAmount %></td> 

                                       <td class="text-center ">
                                        <a class="btn btn-sm btn-danger rounded font-sm mt-15 text-white"
                                            data-user-id="<%= coupon._id  %>"
                                            data-initial-status="<%= coupon.status %>"
                                            onclick="List('<%= coupon._id %>')">
                                            <%= coupon.status?"Unlist":"List" %>
                                        </a>
                                        <a class="btn btn-sm btn-brand rounded font-sm mt-15"
                                            href="/admin/editCoupon?id=<%= coupon._id %>">Edit</a>
                                    </td>
                                    </tr>
                                    <%  })  %>
                            <%}%>
                          </tbody>
                        </table>
                        <!-- table-responsive.// -->
                    </div>
                </div>

